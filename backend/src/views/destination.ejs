<!DOCTYPE html>
<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <title>Quản lý điểm đến</title>
        <!-- Embed Font -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
            rel="stylesheet"
        />
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Font Awesome -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <!-- CSS -->
        <link rel="stylesheet" href="/css/main.css" />
    </head>
    <body>
        <div class="dashboard">
            <div class="container_fuild">
                <div class="dashboard__inner">
                    <%- include('partials/sidebar') %>
                    <div class="destination">
                        <div class="destination__header">
                            <h2 class="destination__title">Quản lý điểm đến</h2>
                            <div class="destination__actions">
                                <% if (userPermissions && userPermissions.includes('DELETE_DESTINATION')) { %>
                                    <button
                                        id="deleteSelectedBtn"
                                        class="destination__btn destination__btn--danger destination__btn--delete-selected"
                                        style="display: none;"
                                        onclick="deleteSelected()"
                                    >
                                        <i class="fas fa-trash"></i> Xóa đã chọn
                                    </button>
                                <% } %>
                                <% if (userPermissions && userPermissions.includes('CREATE_DESTINATION')) { %>
                                    <a
                                        href="/destination/add"
                                        class="destination__btn destination__btn--primary destination__btn--add"
                                        >Thêm mới</a
                                    >
                                <% } else { %>
                                    <a class="destination__btn destination__btn--primary destination__btn--add disabled" style="pointer-events:none; opacity:0.5;">Thêm mới</a>
                                <% } %>
                            </div>
                        </div>

                        <!-- Search and Filter Section -->
                        <div class="destination__search-section">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-8">
                                    <form method="GET" action="/destination" class="destination__search-form">
                                        <div class="input-group">
                                            <input 
                                                type="text" 
                                                name="search" 
                                                class="form-control" 
                                                placeholder="Tìm kiếm theo tên, mô tả, phân loại, quốc gia, châu lục hoặc người tạo..." 
                                                value="<%= search %>"
                                                maxlength="100"
                                            >
                                            <button class="btn btn-outline-secondary" type="submit">
                                                Tìm kiếm
                                            </button>
                                            <% if (search) { %>
                                            <a href="/destination" class="btn btn-outline-danger">
                                                <i class="fas fa-times"></i>
                                            </a>
                                            <% } %>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-4 text-end">
                                    <form method="GET" action="/destination" class="destination__items-per-page-form">
                                        <% if (search) { %>
                                        <input type="hidden" name="search" value="<%= search %>">
                                        <% } %>
                                        <input type="hidden" name="page" value="1">
                                        <div class="d-inline-flex align-items-center">
                                            <label for="itemsPerPage" class="form-label text-muted me-2 mb-0">
                                                Hiển thị:
                                            </label>
                                            <select name="limit" id="itemsPerPage" class="form-select form-select-sm" style="width: auto;" onchange="handleLimitChange(this)">
                                                <option value="5" <%= pagination.limit == 5 ? 'selected' : '' %>>5</option>
                                                <option value="10" <%= pagination.limit == 10 ? 'selected' : '' %>>10</option>
                                                <option value="15" <%= pagination.limit == 15 ? 'selected' : '' %>>15</option>
                                                <option value="20" <%= pagination.limit == 20 ? 'selected' : '' %>>20</option>
                                                <option value="25" <%= pagination.limit == 25 ? 'selected' : '' %>>25</option>
                                                <option value="50" <%= pagination.limit == 50 ? 'selected' : '' %>>50</option>
                                            </select>
                                            <span class="text-muted ms-2" style="font-size: 0.9rem; font-weight: 600;">mục/trang</span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Notification Messages -->
                        <% if (message && message.length > 0) { %>
                        <div
                            class="modal-notify modal-notify--active modal-notify--success"
                        >
                            <div class="modal-notify__content">
                                <span class="modal-notify__message">
                                    <%= message[0] %>
                                </span>
                                <button
                                    class="modal-notify__close"
                                    onclick="hideToastNotification(this.closest('.modal-notify'))"
                                >
                                    ×
                                </button>
                            </div>
                        </div>
                        <% } %> 
                        <% if (error && error.length > 0) { %>
                        <div
                            class="modal-notify modal-notify--active modal-notify--error"
                        >
                            <div class="modal-notify__content">
                                <span class="modal-notify__message">
                                    <%= error[0] %>
                                </span>
                                <button
                                    class="modal-notify__close"
                                    onclick="hideToastNotification(this.closest('.modal-notify'))"
                                >
                                    ×
                                </button>
                            </div>
                        </div>
                        <% } %>

                        <div class="destination__table--wrapper">
                            <table class="table table-striped destination__table">
                                <thead>
                                    <tr>
                                        <% if (userPermissions && userPermissions.includes('DELETE_DESTINATION')) { %>
                                            <th>
                                                <input type="checkbox" id="selectAll" class="form-check-input" onchange="toggleSelectAll(this)">
                                            </th>
                                        <% } %>
                                        <th>Tên điểm đến</th>
                                        <th>Thông tin</th>
                                        <th>Hình ảnh</th>
                                        <th>Trạng thái</th>
                                        <th>Quốc gia</th>
                                        <th>Châu lục</th>
                                        <th>Phân loại</th>
                                        <th>Tạo bởi</th>
                                        <th>Cập nhật bởi</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (destinations && destinations.length > 0) { %>
                                        <% destinations.forEach(destination => { %>
                                            <tr>
                                                <% if (userPermissions && userPermissions.includes('DELETE_DESTINATION')) { %>
                                                    <td>
                                                        <input type="checkbox" class="form-check-input destination-checkbox" value="<%= destination._id %>" onchange="toggleDeleteButton()">
                                                    </td>
                                                <% } %>
                                                <td>
                                                    <strong><%= destination.name %></strong>
                                                </td>
                                                <td>
                                                    <% if (destination.info) { %>
                                                        <%= destination.info.length > 50 ? destination.info.substring(0, 50) + '...' : destination.info %>
                                                    <% } else { %>
                                                        <em class="text-muted">Chưa có thông tin</em>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (destination.image) { %>
                                                        <img src="<%= destination.image %>" alt="<%= destination.name %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>                                                
                                                <td>
                                                    <% if (userPermissions && userPermissions.includes('UPDATE_DESTINATION')) { %>
                                                        <button 
                                                            class="destination__badge destination__badge--toggle destination__badge--<%= destination.status === 'Hoạt động' ? 'success' : 'inactive' %>" 
                                                            onclick="toggleStatus(this)" 
                                                            data-id="<%= destination._id %>" 
                                                            data-status="<%= destination.status %>"
                                                        >
                                                            <%= destination.status === 'Hoạt động' ? 'Hoạt động' : 'Tạm dừng' %>
                                                        </button>
                                                    <% } else { %>
                                                        <span class="destination__badge destination__badge--<%= destination.status === 'Hoạt động' ? 'success' : 'inactive' %>" style="opacity:0.5;">
                                                            <%= destination.status === 'Hoạt động' ? 'Hoạt động' : 'Tạm dừng' %>
                                                        </span>
                                                    <% } %>
                                                </td>                                                
                                                <td>
                                                    <% if (destination.country) { %>
                                                        <%= destination.country %>
                                                    <% } else { %>
                                                        <span class="text-muted">Chưa có</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (destination.continent) { %>
                                                        <span class="badge bg-info text-dark">
                                                            <%= destination.continent %>
                                                        </span>
                                                    <% } else { %>
                                                        <span class="text-muted">Chưa có</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (destination.type) { %>
                                                        <span class="badge bg-<%= destination.type === 'Trong nước' ? 'primary' : 'warning' %>">
                                                            <%= destination.type %>
                                                        </span>
                                                    <% } else { %>
                                                        <span class="text-muted">Chưa có</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="destination__user-info">
                                                        <i class="fas fa-user"></i>
                                                        <%= destination.createdBy || 'System' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="destination__user-info">
                                                        <i class="fas fa-user-edit"></i>
                                                        <%= destination.updatedBy || 'System' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-2 justify-content-center">
                                                        <% if (userPermissions && userPermissions.includes('UPDATE_DESTINATION')) { %>
                                                            <a href="/destination/edit/<%= destination._id %>" class="destination__btn destination__btn--warning destination__btn--sm">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                        <% } else { %>
                                                            <a class="destination__btn destination__btn--warning destination__btn--sm disabled" style="pointer-events:none; opacity:0.5;">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                        <% } %>
                                                        <% if (userPermissions && userPermissions.includes('DELETE_DESTINATION')) { %>
                                                            <form method="POST" action="/destination/delete/<%= destination._id %>" class="destination__form--delete" style="display: inline;">
                                                                <button type="submit" class="destination__btn destination__btn--danger destination__btn--sm">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        <% } else { %>
                                                            <button class="destination__btn destination__btn--danger destination__btn--sm disabled" style="pointer-events:none; opacity:0.5;">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="<%= userPermissions && userPermissions.includes('DELETE_DESTINATION') ? '12' : '11' %>" class="destination__table-empty text-center">
                                                <span>
                                                    Chưa có điểm đến nào
                                                </span>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination Section -->
                        <% if (destinations && destinations.length > 0) { %>
                        <div class="destination__pagination">
                            <nav aria-label="Phân trang điểm đến">
                                <ul class="pagination justify-content-center">
                                    <!-- First & Previous Button -->
                                    <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                                        <a class="page-link" href="<%= pagination.hasPrev ? `?page=1${search ? `&search=${encodeURIComponent(search)}` : ''}&limit=${pagination.limit}` : '#' %>" aria-label="Trang đầu">
                                            «
                                        </a>
                                    </li>
                                    
                                    <!-- Page Numbers -->
                                    <% 
                                    let startPage = Math.max(1, pagination.current - 2);
                                    let endPage = Math.min(pagination.total, pagination.current + 2);
                                    
                                    // Đảm bảo luôn hiển thị 5 trang nếu có thể
                                    if (endPage - startPage < 4) {
                                        if (startPage === 1) {
                                            endPage = Math.min(pagination.total, startPage + 4);
                                        } else {
                                            startPage = Math.max(1, endPage - 4);
                                        }
                                    }
                                    
                                    for (let i = startPage; i <= endPage; i++) { %>
                                        <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %><%= search ? `&search=${encodeURIComponent(search)}` : '' %>&limit=<%= pagination.limit %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <!-- Last & Next Button -->
                                    <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                                        <a class="page-link" href="<%= pagination.hasNext ? `?page=${pagination.total}${search ? `&search=${encodeURIComponent(search)}` : ''}&limit=${pagination.limit}` : '#' %>" aria-label="Trang cuối">
                                            »
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Multiple Confirmation Modal -->
        <div class="modal fade" id="deleteMultipleModal" tabindex="-1" aria-labelledby="deleteMultipleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <h5 class="modal-title" id="deleteMultipleModalLabel">
                            Xóa nhiều điểm đến
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-3">Bạn có chắc chắn muốn xóa <strong id="selectedCount"></strong> điểm đến đã chọn?</p>
                        <div class="alert alert-warning d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <small>Hành động này không thể hoàn tác!</small>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                        <button type="button" class="btn btn-danger" id="confirmDeleteMultipleBtn">
                            <i class="fas fa-trash me-2"></i>Xóa tất cả
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <h5 class="modal-title" id="deleteModalLabel">
                            Xóa điểm đến
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-3">Bạn có chắc chắn muốn xóa điểm đến <strong id="destinationNameToDelete"></strong> ?</p>
                        <div class="alert alert-warning d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <small>Hành động này không thể hoàn tác!</small>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                            <i class="fas fa-trash me-2"></i>Xóa
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Thêm CSRF token cho JavaScript -->
        <script>
            window.csrfToken = '<%= csrfToken %>';
        </script>
        
        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/toast-auto-hide.js?v=<%= Date.now() %>"></script>
        <script src="/js/destination.js?v=<%= Date.now() %>"></script>
        
        <!-- Session Security -->
        <script src="/js/session-security.js?v=<%= Date.now() %>"></script>
    </body>
</html>
